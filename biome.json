{
    "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
    "linter": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120,
        "formatWithErrors": true
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "arrowParentheses": "asNeeded"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    }
}
